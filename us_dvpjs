// programmer javascript Dvorak, by Nicolas Rodriguez <nicoandres.rodriguez at gmail dot com>
// Main features: Numbers are in shift position (like French), symbols have been
// placed in locations that give good hand-alternation and finger rolling with
// symbols that usually follows, accented characters are possible for I18N,
// and AltGr allows vim motions.
// Patch suggestions should be sent upstream.

// programmer javascript Dvorak, by Nicolas Rodriguez <nicoandres.rodriguez at gmail dot com>
// Main features: Numbers are in shift position (like French), symbols have been
// placed in locations that give good hand-alternation and finger rolling with
// symbols that usually follows, accented characters are possible for I18N,
// and AltGr allows vim motions.
// Patch suggestions should be sent upstream.
default
xkb_symbols "basic" {

    include "us(dvorak)"
    name[Group1] = "English (programmer Dvorak)";

    //             Unmodified       Shift           AltGr            Shift+AltGr
    // symbols row, left side
    key <TLDE> { [ asciitilde,      minus,          dead_tilde                  ] };
    key <AE01> { [ at,              dollar                                      ] };
    key <AE02> { [ braceleft,       7,              currency                    ], type[Group1] = "FOUR_LEVEL_ALPHABETIC" };
    key <AE03> { [ braceright,      5,              cent                        ], type[Group1] = "FOUR_LEVEL_ALPHABETIC" };
    key <AE04> { [ parenleft,       3,              yen                         ], type[Group1] = "FOUR_LEVEL_ALPHABETIC" };
    key <AE05> { [ parenright,      1,              EuroSign                    ], type[Group1] = "FOUR_LEVEL_ALPHABETIC" };
    key <AE06> { [ equal,           9,              sterling                    ], type[Group1] = "FOUR_LEVEL_ALPHABETIC" };

    //             Unmodified       Shift           AltGr            Shift+AltGr
    // symbols row, right side
    key <AE07> { [ less,            0                                           ], type[Group1] = "FOUR_LEVEL_ALPHABETIC" };
    key <AE08> { [ greater,         2,              onehalf                     ], type[Group1] = "FOUR_LEVEL_ALPHABETIC" };
    key <AE09> { [ bracketleft,     4                                           ], type[Group1] = "FOUR_LEVEL_ALPHABETIC" };
    key <AE10> { [ bracketright,    6                                           ], type[Group1] = "FOUR_LEVEL_ALPHABETIC" };
    key <AE11> { [ exclam,          8,              exclamdown,      U2E18      ], type[Group1] = "FOUR_LEVEL_ALPHABETIC" };  // reversed interrobang
    key <AE12> { [ grave,           percent,        dead_grave                  ] };
    key <BKSP> { [ BackSpace,       BackSpace                                   ] };

    //             Unmodified       Shift           AltGr            Shift+AltGr
    // upper row, left side
    key <AD01> { [ colon,           backslash,      dead_diaeresis              ] };
    key <AD02> { [ comma,           asterisk,       guillemotleft,   U201C      ] };
    key <AD03> { [ period,          plus,           guillemotright,  U201D      ] };
    key <AD04> { [ p,               P,              paragraph,       section    ] };
    key <AD05> { [ y,               Y,              udiaeresis,      Udiaeresis ] };

    //             Unmodified       Shift           AltGr            Shift+AltGr
    // upper row, right side
    key <AD08> { [ c,               C,              ccedilla,        Ccedilla   ] };
    key <AD09> { [ r,               R,              registered,      trademark  ] };
    key <AD11> { [ semicolon,       question,       questiondown,    U203D      ] };  // interrobang
    key <AD12> { [ numbersign,      asciicircum,    dead_circumflex, dead_caron ] };

    //             Unmodified       Shift           AltGr            Shift+AltGr
    // home row, left side
    key <AC01> { [ a,               A,              aring,           Aring      ] };
    key <AC02> { [ o,               O,              oslash,          Ooblique   ] };
    key <AC03> { [ e,               E,              ae,              AE         ] };
    key <AC04> { [ u,               U,              eacute,          Eacute     ] };

    //             Unmodified       Shift           AltGr            Shift+AltGr
    // home row, right side
    key <AC06> { [ d,               D,              eth,             ETH        ] };
    key <AC07> { [ h,               H,              Left                        ] };
    key <AC08> { [ t,               T,              Down                        ] };
    key <AC09> { [ n,               N,              Up,              ntilde     ] };
    key <AC10> { [ s,               S,              Right                       ] };
    key <AC11> { [ less,            underscore,     slash		        ] };
    key <BKSL> { [ ampersand,       bar                                         ] };

    key <LSGT> { [ underscore,      percent                                     ] };
    key <RWIN> { [ minus,           percent                                     ] };

    // Remap ctrl to caps
    key <CAPS> { [ Control_L                                                    ] };
    key <LCTL> { [ Caps_Lock                                                    ] };

    // lower row, left side
    key <AB01> { [ apostrophe,      quotedbl,       dead_acute                  ] };

    include "level3(ralt_switch)"
};
